{
  "name": "article-tooling",
  "displayName": "article-tooling",
  "description": "Write better articles with transparent and trusted tooling",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.lingueeDutchEnglish",
        "title": "Translate Dutch to English",
        "category": "Linguee"
      },
      {
        "command": "extension.lingueeEnglishDutch",
        "title": "Translate English to Dutch",
        "category": "Linguee"
      },
      {
        "command": "extension.thesaurus",
        "title": "Get info",
        "category": "Thesaurus"
      },
      {
        "command": "extension.synoniemen",
        "title": "Get info",
        "category": "Synoniemen.net"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  },
  "dependencies": {
    "@vscode/vsce": "^3.6.0"
  }
}
